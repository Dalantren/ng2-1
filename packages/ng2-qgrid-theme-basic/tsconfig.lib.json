{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "allowJs": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "./dist",
    "declaration": true,
    "inlineSources": true,
    "types": [],
    "lib": [
      "dom",
      "esnext"
    ],
		"paths": {
      "@angular/*": [
        "./node_modules/@angular/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true
  },
  "composite": true,
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    {
      "path": "../ng2-qgrid"
    }
  ]
}
