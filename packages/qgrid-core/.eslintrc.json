{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab",
						{
							"SwitchCase": 1
						}
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
		"overrides": [
			{
				"files": ["**/*.ts", "**/*.tsx"],
				"plugins": [
					"@typescript-eslint"
				],
				"extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
				"parser": "@typescript-eslint/parser",
				"parserOptions": {
					"ecmaVersion": "latest",
					"sourceType": "module"
				},
				"rules": {
					"indent": [
							"error",
							"tab"
					],
					"linebreak-style": [
							"error",
							"unix"
					],
					"quotes": [
							"error",
							"single"
					],
					"semi": [
							"error",
							"always"
					]
				}
			}
		]
}
